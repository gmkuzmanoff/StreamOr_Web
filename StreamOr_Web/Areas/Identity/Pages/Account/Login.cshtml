@page
@model LoginModel

@{
    ViewData["Title"] = "Log in to account";
}

<h1 class="text-center my-3">@ViewData["Title"]</h1>
<div class="row d-flex justify-content-center">
    <div class="col-md-4">
        <section>
            <form id="account" method="post">
                <h2></h2>
                <hr style="color:lightgray;"/>
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-floating my-3">
                    <input asp-for="Input.Email" class="form-control" autocomplete="username" aria-required="true" />
                    <label asp-for="Input.Email" class="form-label"></label>
                    <span asp-validation-for="Input.Email" class="text-danger"></span>
                </div>
                <div class="form-floating my-3">
                    <input asp-for="Input.Password" class="form-control" autocomplete="current-password" aria-required="true" />
                    <label asp-for="Input.Password" class="form-label"></label>
                    <span asp-validation-for="Input.Password" class="text-danger"></span>
                </div>
                <div>
                    <button id="login-submit" type="submit" class="w-100 btn btn-lg btn-primary" style="background-color:darkcyan; color:black;">Sign in</button>
                </div>@* 
                <div class="my-3">
                    <p>
                        <a id="forgot-password" style="text-decoration:none; color:aquamarine;" asp-page="./ForgotPassword">Forgot your password?</a>
                    </p>
                </div> *@
            </form>
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
