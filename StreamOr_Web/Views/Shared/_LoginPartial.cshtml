@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<ul class="navbar-nav">

@if (SignInManager.IsSignedIn(User))
{
    <li class="nav-item">
            <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage"><strong>User:</strong> <span class="text-success">@User.Identity?.Name</span></a>
    </li>
        <li class="nav-item bg-success" style="border-radius:3px;">
        <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
            <button  type="submit" class="nav-link btn btn-link text-white">Logout</button>
        </form>
    </li> 
}
else
{
    <li class="nav-item">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Register">Sign up</a>
    </li>
    <li class="nav-item bg-success" style="border-radius:3px;">
        <a class="nav-link text-white" asp-area="Identity" asp-page="/Account/Login">Log in</a>
    </li>
}
    <li class="nav-item">
        <a class="nav-link text-white ms-3" asp-area="" asp-controller="Home" asp-action="About">About</a>
    </li>
</ul>
