@using StreamOr.Core.Models
@using System.Web;

@model ICollection<RadioViewModel>
@{
    ViewBag.Title = $"All Radios";
}

<h1>@ViewBag.Title</h1>
<br />
<br />
<div class="row row-cols-1 row-cols-sm-5 g-4 rounded-2">
    @if (Model.Count > 0)
    {
        foreach (var radio in Model)
        {
            <div class="col">
                <div class="card h-100 w-100">
                    @if (Boolean.Parse(radio.IsFavorite))
                    {
                        <p class="card-img-overlay fs-6 text-end" style="margin-top:7.8em; margin-left:-1.7em;width:2px;">💚</p>
                    }  
                    <img id="card-image" src="@radio.LogoUrl" class="card-img-top bg-black" style="object-fit:contain;max-height:150px;width:100%;" alt="...">
                    <div class="card-body" style="max-height:10em;">
                        <h5 class="card-title">@radio.Title</h5>
                        <p class="card-text" style="font-size:0.8em;">@radio.Description</p>
                    </div>
                    <div class="card-footer bg-dark">
                        <p id="card-genre" class="text-white" style="font-size:12px;">@radio.Genre</p>
                    </div>
                    <div class="card-img-overlay" style="height:20em;"></div>
                    <div class="card-footer d-flex justify-content-between">
                        <button type="button" class="btn btn-info border-2 border-dark" style="font-size:0.9em;">▶ Listen</button>
                        <div class="d-flex">
                            <a class="btn fs-6" style="font-size:0.8em;" title="Edit">✏️</a>
                            <a asp-controller="Details" asp-action="Details" asp-route-id="@radio.Id" class="btn fs-6" style="font-size:0.8em;" title="Details">📄</a>
                        </div>
                        <a asp-controller="DeleteRadio" asp-action="Delete" asp-route-id="@radio.Id" class="btn card-img-overlay fs-5" title="Delete" style="margin-left:7.8em;height:1px; width:1px;line-height:1px;">❌</a>
                    </div>
                </div>
            </div>
        }
    }
    else
    {
        <p class="text-danger">Empty!</p>
    }
</div>





    
